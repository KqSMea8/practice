@charset "utf-8";
/* CSS Document */
html,div,input,button,select,textarea,form,fieldset,iframe,object,pre,code,legend,blockquote{margin:auto; padding:0; border:0; font-family:-apple-system-font,PingFangSC-Regular,Helvetica,"Droid Sans","Hiragino Sans GB",sans-serif,"Microsoft YaHei";}
html{font-size:16px;}
ul,ol,li{list-style:none; margin:auto; padding:0;}
a{text-decoration:none; color:inherit; font-size:inherit; cursor:pointer; -webkit-tap-highlight-color:rgba(0,0,0,0);}
img{border:0; line-height:0;}
button{cursor:pointer;}
input,button,select,textarea{-webkit-appearance: none;}
input[type="button"]:active, input[type="submit"]:active, input[type="reset"]:active, button:active, a:active{opacity:.8;}
*{outline:none;}
.clear{ clear:both;}
body{margin:0;padding:0;background-color:#f5f5f5;}
.pay-box{position: relative;width: auto;margin:2rem 1rem 1rem 1rem;}
.pay-top{position: relative;text-align: center;}
.pay-top01{position:relative;display:inline-block;width:3rem;height:3rem;border-radius:50%;overflow: hidden;}
.pay-top01 img{width: 100%; display:block;}
.pay-top02{position:relative;color:#424242;font-size:1rem; margin-top:.5rem; line-height:100%;}
.pay-bot{background: #fff;padding: 1rem 1.5rem; margin-top:1.5rem; border-radius:.375rem;}
.pay-bot span{display: inline-block;}
.moneybox{height:4rem;position: relative;}
.pay-bot01{color: #8e8e8e;font-size:.8125rem;}
.pay-bot02{font-size:1.75rem ;color: #666;position: absolute;top:1.25rem; left:0; line-height:100%;}
.pay-bot03{margin-left:1.75rem; padding-top:.75rem;font-size: 2.625rem;color: #242424;line-height:100%;width: 80%;}
.pay-bot04{position: absolute;left: 1.75rem;top: 0.75rem;}
.pay-bot04 img{width: .125rem;}
.keyboardbox {width: 100%;height: 14rem;border-top: 1px solid #E0E0E0;position: fixed;bottom: 0;background-color: white;}
.keyboardbox div {width: 100%;height: 100%;position: relative;}
.keyboardbox span {position: absolute;width: 24%;height: 3.5rem;display: inline-block;color: #242424;font-size: 1.5rem;line-height:3.5rem;text-align: center;box-sizing:border-box; -webkit-box-sizing:border-box;}
.touched {background: #d1d5db;}
.pmess{position: fixed;bottom: 14.75rem;left: 0;width: 100%;color: #aaa;font-size: .75rem;text-align: center;}

.pay-ok{position:relative; width:auto; padding:3.5rem 0; text-align:center; background-color:#fff;}
.pay-ok01{ position:relative;}
.pay-ok01 img{ width:3.75rem; display:block; margin:auto;}
.pay-ok02{ position:relative; margin-top:1rem; font-size:1rem; color:#1aad19; line-height:100%;}
.pay-ok03{ position:relative; margin-top:.75rem; font-size:2rem; color:#242424; line-height:100%;}
.pay-ok03 span{ font-size:1rem; padding-right:.25rem;}
.pay-ok04{ position:relative; margin-top:.75rem; font-size:.8125rem; color:#8e8e8e; line-height:100%;}
.pay-ok05{ position:relative; margin-top:1.5rem;}
.pay-ok05 input{ display:block; width:8rem; height:2.625rem; border-radius:.3125rem; background-color:#fff; border:1px solid #1aad19; color:#1aad19; font-size:1rem;}
.pay-ok05 input:active{ background-color:#fafafa;}